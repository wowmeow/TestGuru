<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "registration_new" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, 'Имя:' %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name"%>
  </div>

  <div class="field">
    <%= f.label :last_name, 'Фамилия:' %><br />
    <%= f.text_field :last_name, autocomplete: "last-name" %>
  </div>

  <div class="field">
    <%= f.label :email, 'Почта:' %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'Пароль:' %>
    <% if @minimum_password_length %>
    <em>(минимум <%= @minimum_password_length %> символов)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Повторите пароль' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрироваться" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
