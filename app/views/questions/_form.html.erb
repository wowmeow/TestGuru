<%= form_with model: [@test, @question], locale: true do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <p>
    <%= form.label :text, 'Текст вопроса:' %>
    <%= form.text_field :text, id: :question_text, rows: 2, cols: 60%>
  </p>

  <p><%= form.submit 'Сохранить' %></p>
<% end %>